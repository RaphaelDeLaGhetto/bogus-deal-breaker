<section>
  <% if logged_in? %>
    <a href="/new"><button>Post New Deal</button></a>
  <% else %>
    <a href="/login"><button>Login</button></a>
  <% end %>
  
</section>

<% @posts.each do |post| %>
  <article>
      <header>
          <img src="<%= post[:image] %>">
      </header>
      <section>
          <%= post[:description] %>
      </section>
      <footer>
         <div class="hot"><%= post.get_freshness %></div>
         <time><%= post[:created_at] %></time> 
      </footer>
  </article>
<% end %>